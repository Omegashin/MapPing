<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@color/colorPrimaryDark</item>

    </style>

    <style name="toolbarTitle" parent="@android:style/TextAppearance.Material.Widget.Toolbar.Title">
        <item name="android:fontFamily">@font/leaguespartan</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="partTitle" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/leaguespartan</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
